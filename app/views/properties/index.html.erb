<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="col-lg-3 col-md-3">
        <form role="form">
          <h3>Pesquise avançada:</h3>
          <div class="form-group">
            <select class="form-control">
              <option>Escolha a Cidade</option>
              <option>Taquara</option>
              <option>Igrejinha</option>
              <option>Parobé</option>
              <option>Rolante</option>
            </select>
          </div>
          <div class="form-group">
            <select class="form-control">
              <option>Escolha o Bairro</option>
              <option>Santa Rosa</option>
              <option>Rio da Ilha</option>
              <option>Padilha</option>
              <option>Centro</option>
            </select>
          </div>
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <select class="form-control" name="quartos">
                  <option value="indiferente">Quartos</option>
                  <option value="1">1 quarto</option>
                  <option value="2">2 quartos</option>
                  <option value="3">3 quartos</option>
                  <option value="4">4 quartos</option>
                </select>
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <select class="form-control" name="vagas">
                  <option value="indiferente">Garagem</option>
                  <option value="1">1 vaga</option>
                  <option value="2">2 vagas</option>
                  <option value="3">3 vagas</option>
                  <option value="4">4 vagas</option>
                </select>
              </div>
            </div>
          </div>
          <div class="form-group">
            <select class="form-control" name="tipo">
              <option value="indiferente">Escolha o tipo do imóvel</option>
              <option value="3">Apartamento</option>
              <option value="4">Casa</option>
              <option value="6">Cobertura</option>
              <option value="7">Escritório</option>
            </select>
          </div>
          <div class="row">
            <div class="col-xs-6 col-md-6"><input type="submit" value="Pesquisar" class="btn btn-success btn-block btn-lg" tabindex="7"></div>
          </div>
        </form>
      </div>
      <div id="imoveis" class="col-lg-9 col-md-9">
        <div id="properties-list" class="row">

          <div class="col-lg-6 col-lg-offset-3">
            <%= paginate @properties, :theme => 'twitter-bootstrap-3', 
            :pagination_class => "pagination-small pagination-centered" %>
          </div>
          <div class="col-lg-3 pull-right">
            <form role="form">
              <div class="form-group">
                <select class="form-control">
                  <option>Ordenar por</option>
                  <option>Menor Valor</option>
                  <option>Maior Valor</option>
                  <option>Maior area</option>
                  <option>Menor area</option>
                </select>
              </div>
            </form>
          </div>

        </div>
        <% if @properties.count > 0 %>
        <% @properties.each do |property| %>
        <div class="media">
          <a class="pull-left  col-lg-4" href="<%= property_url(property) %>">
            <img class="media-object img-responsive thumbnail" src="<%= property.pictures.first.file.thumb('253x190#').url %>" alt="...">
          </a>
          <div class="media-body">
            <h4 class="media-heading">Ref: <%= property.id %></h4>
            <b> <%= property.property_type.name %> para <%= property.business_type.name %> </b>
            <br>
            <b> Localidade: </b>
            <%= property.district.name %>, <%= property.district.city.name %> - <%= property.district.city.state.uf %>
            <br>
            <b> Valor: </b>
            <% if property.sell_price %>
            <%= number_to_currency(property.sell_price) %>
            <% else %>
            Consulte
            <% end %>
            <br>
            <br>
            <b> Descrição: </b><%= property.description.truncate(300) %>
          </div>
        </div>
        <% end %>
        <% end %>

        <div class="col-lg-6 col-lg-offset-3">
          <ul class="pagination pagination-centered">
            <li><a href="#">&laquo;</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">&raquo;</a></li>
          </ul>
        </div> 
      </div>
      </div>
  </div>
</div> <!-- /container -->
