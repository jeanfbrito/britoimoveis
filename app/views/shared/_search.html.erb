<%= simple_form_for :search, :url => properties_path, html: { novalidate: true }, :method => :get do |f| %>
  <div class="form-group">
    <%= f.input_field :city_id, collection: City.order(:name).used, label_method: :name, value_method: :id, include_blank: "Escolha a Cidade" %>
  </div>

  <div class="form-group">
    <%= f.input_field :district_id, collection: ([]),  include_blank: "Escolha uma cidade primeiro" %>
  </div>

  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">
        <%= f.input_field :bedrooms, collection:  1..10, include_blank: "Quartos"%>
      </div>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-6"> 
      <div class="form-group">
        <%= f.input_field :garages, collection: 0..10, include_blank: "Garagem"%>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.input_field :property_type_id, collection: PropertyType.order(:name).used, label_method: :name, value_method: :id, include_blank: "Escolha tipo de imÃ³vel" %>
  </div>

  <div class="form-group">
    <input type="text" id="value_slider" name="value_slider" value="" />
    <%= f.hidden_field :value_min %>
    <%= f.hidden_field :value_max %>
  </div>

 


  <div class="form-group">
    <div class="row">
      <div class="col-xs-12">
          <div class="col-xs-offset-2 col-xs-8 col-md-offset-1 col-md-10">
            <%= button_tag(type: 'submit', class: "btn btn-success btn-block btn-lg") do %>
              <i class="fa fa-search"></i> 
              Pesquisar
            <% end %>
          </div>
      </div>
    </div>
  </div>

<% end %>
