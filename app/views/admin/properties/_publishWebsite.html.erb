<% if website = @property.on_website %>
  <%= form_for ([:admin, @property]), :remote => true do |f| %>
    <%= f.hidden_field :on_website, value: false %>
    <%= button_tag(type: 'submit', class: "btn btn-default") do %>
      <i class="fa fa-globe"></i> 
      Website
    <% end %>
  <% end %>
<% else %>
  <%= form_for ([:admin, @property]), :remote => true do |f| %>
    <%= f.hidden_field :on_website, value: true %>
    <%= button_tag(type: 'submit', class: "btn btn-default") do %>
      <i class="fa fa-globe  not-published"></i> 
      Website
    <% end %>
  <% end %>
<% end %>
