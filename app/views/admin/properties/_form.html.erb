<div class="row">
  <div class="col-lg-12">
    <div id="highlighted">
      <%= render 'admin/highlighted_properties/highlight', :property => @property %>
    </div>
  <%= simple_form_for [:admin, @property], :html => { :class => 'form-horizontal', :role => "form" } do |f| %>
    <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="title-divider">
      <h3>Endereço</h3>
    <div>
  <div class="form-group">
    <div class="col-lg-4">
      <%= f.input :address_name, placeholder: 'Travessa Reis', :input_html => { :class => "form-control" }%>
    </div>
    <div class="col-lg-1">
          <%= f.input :address_number, placeholder: '250', :input_html => { :class => "form-control" }%>
    </div>
    <div class="col-lg-2">
          <%= f.association :district, :input_html => { :class => "form-control" }%>
    </div>
    <div class="col-lg-3">
          <%= f.input :address_complement, placeholder: 'Casa branca', :input_html => { :class => "form-control" }%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-6">
          <%= f.input :address_reference, placeholder: 'Ao lado da Igreja', :input_html => { :class => "form-control" }%>
    </div>
  </div>

  <h3>Medidas</h3>
  <div class="form-group">
    <div class="col-lg-2">
          <%= f.input :privative_area, placeholder: '120', :input_html => { :class => "form-control" }, hint: 'em metros quadrados. Ex.: 1000'%>
    </div>
    <div class="col-lg-2">
          <%= f.input :constructed_area, placeholder: '120', :input_html => { :class => "form-control" }, hint: 'em metros quadrados. Ex.: 1000'%>
    </div>
    <div class="col-lg-2">
          <%= f.input :total_area, placeholder: '120', :input_html => { :class => "form-control" }, hint: 'em metros quadrados. Ex.: 1000'%>
    </div>
    <div class="col-lg-2">
          <%= f.input :terrain_area, placeholder: '120', :input_html => { :class => "form-control" }, hint: 'em metros quadrados. Ex.: 1000'%>
    </div>
  </div>

  <h3>Dados sobre o Imóvel</h3>
  <div class="form-group">
    <div class="col-lg-2">
          <%= f.input :bedrooms, collection: 0..10, prompt: "Bedrooms", placeholder: '120', :input_html => { :class => "form-control" }%>
    </div>
    <div class="col-lg-2">
          <%= f.input :suits, collection: 0..10, prompt: "Suits", placeholder: '120', :input_html => { :class => "form-control" }%>
    </div>
    <div class="col-lg-2">
          <%= f.input :bathrooms, collection: 0..10, prompt: "Bathrooms", placeholder: '120', :input_html => { :class => "form-control" }%>
    </div>
    <div class="col-lg-2">
          <%= f.input :garages, collection: 0..10, prompt: "Garages", placeholder: '120', :input_html => { :class => "form-control" }%>
    </div>
    <div class="col-lg-2">
          <%= f.input :furnished, :input_html => { :class => "form-control" }%>
    </div>
    <div class="col-lg-2">
      <%= f.input :construction_year, collection: 1950..2015, prompt: "Select the year", :input_html => { :class => "form-control" }%>
    </div>
    <div class="col-lg-12">
          <%= f.input :description, placeholder: 'bla bla bla', :input_html => { :class => "form-control" }%>
    </div>
  </div>
  <h3>Dados sobre o Imóvel</h3>
    <div class="form-group">
      <div class="col-lg-2">
        <%= f.input :on_website, :input_html => { :class => "form-control" }%>
      </div>
      <div class="col-lg-2">
        <%= f.input :on_tablet, :input_html => { :class => "form-control" }%>
      </div>
    </div>

  <h3>Dados Comerciais</h3>
  <div class="form-group">
    <div class="col-lg-2">
          <%= f.input :sell_price, placeholder: '120', :input_html => { :class => "form-control" }, hint: 'em reais. Ex.: 100000 para R$100.000,00'%>
    </div>
    <div class="col-lg-2">
          <%= f.input :client_price, placeholder: '120', :input_html => { :class => "form-control" }, hint: 'em reais. Ex.: 100000 para R$100.000,00'%>
    </div>
    <div class="col-lg-2">
          <%= f.association :property_type, :input_html => { :class => "form-control" }%>
    </div>
    <div class="col-lg-2">
          <%= f.association :business_type, :input_html => { :class => "form-control" }%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
</div>
</div>
