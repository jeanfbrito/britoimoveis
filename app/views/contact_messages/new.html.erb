<div class="container">
  <div class="col-xs-12 col-md-12">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-sm-offset-3">
      <% flash.each do |key, value| %>
              <div class="<%= flash_class(key) %>">
                    <%= value %>
              </div>
        <% end %>
        
      <div id="message"></div>
        <%= simple_form_for @contact_message, :html => {:class => 'form-horizontal' } do |f| %>

        <h2> Entre em contato conosco: </h2>

          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <%= f.input_field :name, :placeholder => "Nome" %>
              </div>  
            </div> 
            <div class="col-xs-offset-1 col-xs-5 col-sm-5 col-md-5"> 
              <div class="form-group">
                <%= f.input_field :city, :placeholder => "Cidade" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
              <%= f.input_field :email, :placeholder => "Email" %>
              </div>
            </div>

            <div class="col-xs-offset-1 col-xs-5 col-sm-5 col-md-5"> 
              <div class="form-group">
              <%= f.input_field :phone, :placeholder => "Telefone" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.input_field :message, :as => :text, :rows => 4, :placeholder => "Escreva sua mensagem aqui" %>
          </div>
          <div class="row">
            <div class="col-xs-12">
                <div class="col-xs-offset-2 col-xs-8 col-sm-7">
                  <input type="submit" value="Enviar contato" class="btn btn-success btn-block btn-lg" tabindex="5">
                </div>
            </div>
          </div>
        <% end %>
      </div>
</div>
</div>
</div>